<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ON.MobileApp.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="{Binding Date}" FontSize="Small"/>
        <Label Text="{Binding Heading}" FontSize="Large"/>
        <Label Text="{Binding Subtitle}" FontSize="Medium"/>
        <WebView x:Name="bodyWebView" Source="{Binding HtmlSource}"  WidthRequest="200" HeightRequest="200" />
    </StackLayout>
    
</ContentPage>